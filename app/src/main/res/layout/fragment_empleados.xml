<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TVnombreNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:text="Nombre negocio"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/TVdireccionNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Dirección"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/TVtelefonoNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Teléfono"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Empleados"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:layout_marginBottom="30dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RVempleados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/background_light">

        </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP: " />

        <EditText
            android:id="@+id/ETip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="@android:color/holo_blue_light"
            android:hint="Ej. 192.168.0.13"
            android:inputType="numberDecimal"
            android:text="192.168.1.105"
            android:textSize="20sp" />

        <Button
            android:id="@+id/BtnEstablecer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:saveEnabled="true"
            android:text=" Establecer IP " />
    </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/BtnSync"
            android:drawableTop="@android:drawable/ic_popup_sync"
            android:text="Sincronizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_popup_sync"
            android:tint="@android:color/background_dark" />
            <CheckBox
                android:id="@+id/CBonline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="Online"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

