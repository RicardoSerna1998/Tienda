<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@android:color/holo_green_light"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TVproductoCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="Jitomate"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/TVprecioCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_weight="1"
        android:text="$15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ETcantidadCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Cantidad"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/TVunidadCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pieza(s)"/>
    </LinearLayout>
    <TextView
        android:id="@+id/TVsubTotalCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:text="$30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnEliminarProducto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableTop="@mipmap/ic_delete_forever_black_24dp" />
    </LinearLayout>
</LinearLayout>
